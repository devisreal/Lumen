{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "Node Typescript Starter!",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "prebuild": "rimraf dist",
    "build": "tsc && tsc-alias",
    "prestart": "npm run build",
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write .",
    "db:push": "pnpm exec drizzle-kit push",
    "db:generate": "pnpm exec drizzle-kit generate",
    "db:migrate": "pnpm exec drizzle-kit migrate"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.0",
    "@types/pg": "^8.11.14",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.25.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "slugify": "^1.6.6"
  }
}